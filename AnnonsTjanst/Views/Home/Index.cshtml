@model IEnumerable<AnnonsTjanst.ServiceReference1.Annonser>

@{
    ViewBag.Title = "Index";
}
<label>Inloggad som: </label>  @ViewBag.medalande
<p>

    @if (@ViewBag.medalande != null)
    {
    <button class="mybutton"> @Html.ActionLink("Lägg till ny annons", "Skapa", "Annons")</button>
    }
    @*<button class="btn btn-default border-dark" style="background:#3BD1FF"> @Html.ActionLink("Login", "Login")</button>
    <button class="btn btn-default border-none" style="background:#3BD1FF"> @Html.ActionLink("temp", "index", new { id = 3031 })</button>*@


</p>

<table class="table">
    <tr>
        <th>
            Vara
        </th>
        <th>
            Beskrivning
        </th>
        @*<th>
            Bild
        </th>*@
        <th>
            Kategori
        </th>
        <th>
            Pris
        </th>
        @*<th>
            Betalningsmetod
        </th>*@
        <th>
            Ort
        </th>
        @*<th>
            Adress
        </th>
