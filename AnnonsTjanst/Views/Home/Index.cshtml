                    @Html.DisplayFor(modelItem => item.datum)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.koparID)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.saljarID)
                </td>*@
                @*<td>
                    @Html.DisplayFor(modelItem => item.annonsID)
                </td>*@
                <td>
                    @if (@ViewBag.medalande != null)
                    {
                    <button class="mybutton"> @Html.ActionLink("Redigera", "Redigera", "Annons", new { id = item.annonsID}, null)</button>
                    }
               
                    <button class="mybutton"> @Html.ActionLink("Detaljer", "Detaljer", "Annons", new { id = item.annonsID }, null)</button>
                </td>
            </tr>
        }
    }

</table>
